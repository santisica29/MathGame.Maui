<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MathGame.Maui.PreviousGames"
            >
    <VerticalStackLayout
        Padding="200,100,200,50">
        <CollectionView x:Name="gamesList">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Label
                            x:Name="Title"
                            Text="Previous Games"
                            HorizontalOptions="Center"/>
                        
                        <Grid.RowDefinitions>
                            <RowDefinition Height="35"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Label Grid.Column="0" Text="{Binding DatePlayed, StringFormat='{0:d}'}" FontSize="16"/>
                        <Label Grid.Column="1" Text="{Binding Type}" FontSize="16"/>
                        <Label Grid.Column="2" Text="{Binding Score}" FontSize="16"/>
                        <Button Grid.Column="3" Text="Delete" CommandParameter="{Binding Id}" Clicked="OnDelete" FontSize="16" Padding="10"/>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>

            <CollectionView.EmptyView>
                <VerticalStackLayout
                    Spacing="50">
                    <Label
    Text="No games yet"
    FontSize="32"
    HorizontalOptions="Center"
    VerticalOptions="Center"/>

                    <Button
    x:Name="BackToMenuBtn"
    Text="Back To Menu"
    Clicked="OnBackToMenu"
    HorizontalOptions="Center"
FontSize="20"/>
                </VerticalStackLayout>
                
            </CollectionView.EmptyView>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>